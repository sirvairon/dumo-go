<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="800.0" prefWidth="500.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ComentariController">
   <children>
      <VBox alignment="CENTER_LEFT">
         <children>
            <Label text="Comentari" />
            <HBox VBox.vgrow="ALWAYS">
               <children>
                  <HBox HBox.hgrow="ALWAYS">
                     <children>
                        <VBox maxHeight="200.0" HBox.hgrow="ALWAYS">
                           <children>
                              <ScrollPane fitToWidth="true" prefHeight="500.0" VBox.vgrow="ALWAYS">
                                 <content>
                                    <Label fx:id="labelComentari" text="Comentari" wrapText="true" />
                                 </content>
                              </ScrollPane>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox styleClass="hBoxResultat">
         <children>
            <VBox>
               <children>
                  <Label fx:id="labelUsuari" text="Usuari" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label fx:id="labelData" text="20/05/2022" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox fx:id="hboxBotones" alignment="CENTER" styleClass="hboxBotones">
         <children>
            <Button fx:id="ButtonVolver" mnemonicParsing="false" onAction="#tancarFinestra" text="Sortir" />
         </children>
      </HBox>
   </children>
   <stylesheets>
      <URL value="@../styles/general.css" />
      <URL value="@../styles/elementvista.css" />
   </stylesheets>
</VBox>
